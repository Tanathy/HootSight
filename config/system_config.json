{
    "general": {
        "language": "en"
    },
    "api": {
        "host": "127.0.0.1",
        "port": 8000
    },
    "ui": {
        "title": "Hootsight",
        "width": 1200,
        "height": 800,
        "resizable": true
    },
    "paths": {
        "projects_dir": "projects",
        "ui_dir": "ui",
        "config_dir": "config",
        "localizations_dir": "config/localizations",
        "packages_file": "config/packages.jsonc",
        "cache_dir": "cache",
        "docs_dir": "docs"
    },
    "system": {
        "max_threads": "auto",
        "fallback_batch_size": 8,
        "startup_wait_seconds": 2,
        "http_timeout": 20,
        "update_repository_url": "https://raw.githubusercontent.com/Tanathy/HootSight/refs/heads/main/",
        "update_skip_paths": [
            "config/config.json",
            "config/system_config.json"
        ]
    },
    "memory": {
        "target_memory_usage": 0.8,
        "safety_margin": 0.9,
        "augmentation_threads": "auto",
        "reserved_memory_ratio": 0.1,
        "memory_per_sample_multiplier": 2.5,
        "min_batch_size": 1,
        "max_batch_size": 128,
        "memory_thresholds": {
            "high_usage": 0.9,
            "moderate_usage": 0.7,
            "low_usage": 0.5
        },
        "batch_size_limits": {
            "small_batch_warning": 4,
            "large_batch_warning": 64
        }
    },
    "dataset_editor": {
        "page_sizes": [
            25,
            50,
            100,
            200,
            500,
            750
        ],
        "default_page_size": 50,
        "size_presets": {
            "Generic": [
                64,
                128,
                224,
                256,
                320,
                384,
                512,
                640,
                768,
                1024
            ],
            "YOLO": [
                320,
                416,
                512,
                608,
                640,
                768,
                896,
                1024
            ],
            "ResNet": [
                160,
                192,
                224,
                256,
                288,
                320,
                384,
                448,
                512,
                640,
                768,
                1024
            ],
            "ResNeXt": [
                160,
                192,
                224,
                256,
                288,
                320,
                384,
                448,
                512,
                640,
                768,
                1024
            ],
            "EfficientNet": [
                224,
                240,
                260,
                300,
                380,
                456,
                528,
                600,
                672,
                800,
                1024
            ],
            "MobileNet": [
                96,
                128,
                160,
                192,
                224,
                256,
                320,
                384,
                512
            ],
            "SqueezeNet": [
                128,
                192,
                224,
                256,
                320,
                384,
                512
            ],
            "ShuffleNet": [
                128,
                160,
                192,
                224,
                256,
                320,
                384,
                512
            ]
        },
        "default_size": 1024,
        "build_workers": "auto",
        "discovery_workers": "auto",
        "project_name_validation": {
            "min_length": 3,
            "max_length": 64,
            "pattern": "^[A-Za-z0-9][A-Za-z0-9_-]*$"
        }
    }
}